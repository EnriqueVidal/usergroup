server {
  listen 80;
  server_name rt.dev;
  rewrite ^(.*) http://www.rt.dev$1 permanent;
}

server {
  listen 80;
  server_name www.rt.dev *.rt.dev;

  root /Users/guerra/rt/public;
  passenger_enabled on;

  rack_env development;
  passenger_friendly_error_pages on;

  access_log /Users/guerra/rt/nginx_access.log;
  access_log /Users/guerra/rt/nginx_error.log;

  error_page 500 502 503 504  /50x.html;
  location = /50x.html {
    root html;
  }
}

